<%= form_tag "/teas/#{@tea['id']}", method: :patch do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @tea['name'] %>
  </div>
  <div>
    <%= label_tag :origin %>
    <%= text_field_tag :origin, @tea['origin'] %>
  </div>
  <div>
    <%= label_tag :weight %>
    <%= text_field_tag :weight, @tea['weight'] %>
  </div>
  <div>
    <%= label_tag :in_stock %>
    <%= text_field_tag :in_stock, @tea['in_stock'] %>
  </div>

  <%= submit_tag "Update tea product" %>

<% end %>
